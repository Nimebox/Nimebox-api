{
  "name": "nimebox-api",
  "version": "0.2.0",
  "private": true,
  "description": "Nimebox RESTful API",
  "main": "./dist/index",
  "scripts": {
    "start": "npm run build && npm run serve",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpileOnly src/index.ts",
    "build": "shx rm -rf dist && cross-env NODE_ENV=production npm run build-ts",
    "serve": "node ./dist/index.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint-fix": "prettier --write \"src/**/*.ts*\" && tslint -p tsconfig.json --fix",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand"
  },
  "author": "xdk78 <xdk78888@gmail.com>",
  "contributors": [
    "pcpl2"
  ],
  "license": "MIT",
  "dependencies": {
    "@3846masa/axios-cookiejar-support": "^0.4.2",
    "axios": "^0.18.0",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "fastify": "^2.2.0",
    "fastify-bearer-auth": "^4.0.0",
    "fastify-circuit-breaker": "^0.1.0",
    "fastify-compress": "^0.8.1",
    "fastify-helmet": "^3.0.0",
    "grabbi": "^0.1.4",
    "jsdom": "^14.0.0",
    "lodash": "^4.17.11",
    "q": "^1.5.1",
    "qs": "^6.7.0",
    "tough-cookie": "^3.0.1",
    "x-ray": "^2.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/jsdom": "^12.2.3",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.13.4",
    "@types/qs": "^6.5.3",
    "dotenv-safe": "^6.1.0",
    "jest": "^24.7.1",
    "prettier": "^1.16.4",
    "shx": "^0.3.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.15.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
